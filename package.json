{
  "name": "trivia-quiz-app",
  "version": "1.0.0",
  "main": "index.js",
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "test": "yarn test-rest && yarn test-client",
    "test-client": "vitest --run --reporter verbose --config ./src/client/vitest.config.mjs",
    "test-rest": "vitest --run --reporter verbose --config ./vitest.config.mjs",
    "start": "node index.js",
    "start-prod": "cross-env NODE_ENV=production node index.js",
    "start-dev-server": "yarn fix-server-alias && yarn start",
    "type-check-client": "tsc -p ./src/client/tsconfig.json",
    "build": "yarn clean && concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"npm run build-server\" \"npm run build-client\"",
    "build-client": "cross-env NODE_ENV=production vite build --config ./src/client/vite.config.ts",
    "build-server": "tsc -b src/server && yarn fix-server-alias",
    "fix-server-alias": "tsc-alias -p ./src/server/tsconfig.json",
    "dev": "concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"npm run dev-server\" \"npm run dev-client\"",
    "dev-client": "vite --config ./src/client/vite.config.ts",
    "dev-server": "tsc-watch --noClear -b ./src/server/tsconfig.json --onSuccess \"yarn start-dev-server\"",
    "seed-db": "ts-node src/scripts/seed-db.ts",
    "docker-db": "cp .env.development .env && docker-compose -f docker-compose-db.yml up -d --remove-orphans",
    "docker-all": "cp .env.demo .env && docker-compose -f docker-compose-demo.yml up -d --build --remove-orphans --force-recreate",
    "demo": "yarn install && yarn docker-all && yarn seed-db"
  },
  "keywords": [
    "typescript",
    "react",
    "vite",
    "material-ui",
    "redux",
    "express",
    "mongoose",
    "docker"
  ],
  "license": "MIT",
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "body-parser": "^2.2.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "mongoose": "^8.15.0",
    "react-redux": "^9.2.0"
  },
  "devDependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^7.1.0",
    "@mui/material": "^7.1.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.18",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react": "^4.4.1",
    "babel-plugin-react-compiler": "^19.1.0-rc.2",
    "concurrently": "^9.1.2",
    "core-js": "^3.42.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "eslint": "^9.27.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.1.0",
    "jsdom": "^26.1.0",
    "msw": "^2.8.4",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-refresh": "^0.17.0",
    "react-router": "^7.6.0",
    "request": "^2.88.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsc-watch": "^6.2.1",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  },
  "overrides": {
    "globals": "14.0.0"
  }
}
